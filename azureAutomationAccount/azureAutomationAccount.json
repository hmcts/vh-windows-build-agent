{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "automationAccountName": {
      "type": "string",
      "defaultValue": "vh-automation-dev"
    }
  },
  "variables": {
    "VSTSAgent": {
      "name": "VSTSAgent",
      "version": "2.0.8",
      "url": "https://psg-prod-eastus.azureedge.net/packages/vstsagent.2.0.8.nupkg"
    },
    "VisualStudioDSC": {
      "name": "VisualStudioDSC",
      "version": "1.0.1",
      "url": "https://psg-prod-eastus.azureedge.net/packages/visualstudiodsc.1.0.1.nupkg"
    },
    "softwareUpdateConfigurationsScope": "[subscription().id]"
  },
  "resources": [
    {
      "type": "Microsoft.Automation/automationAccounts",
      "apiVersion": "2018-01-15",
      "name": "[parameters('automationAccountName')]",
      "location": "[resourceGroup().location]",
      "tags": {},
      "properties": {
        "sku": {
          "name": "Basic"
        }
      },
      "resources": []
    },
    {
      "type": "Microsoft.Automation/automationAccounts/modules",
      "apiVersion": "2015-10-31",
      "name": "[concat(parameters('automationAccountName'), '/VSTSAgent')]",
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
      ],
      "properties": {
        "contentLink": {
          "uri": "[variables('VSTSAgent').url]",
          "version": "[variables('VSTSAgent').version]"
        }
      }
    },
    {
      "type": "Microsoft.Automation/automationAccounts/modules",
      "apiVersion": "2015-10-31",
      "name": "[concat(parameters('automationAccountName'), '/VisualStudioDSC')]",
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
      ],
      "properties": {
        "contentLink": {
          "uri": "[variables('VisualStudioDSC').url]",
          "version": "[variables('VisualStudioDSC').version]"
        }
      }
    },
    {
      "type": "Microsoft.Automation/automationAccounts/softwareUpdateConfigurations",
      "apiVersion": "2017-05-15-preview",
      "name": "[concat(parameters('automationAccountName'), '/WindowsUpdatesRecurring')]",
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
      ],
      "properties": {
        "updateConfiguration": {
          "operatingSystem": "Windows",
          "windows": {
            "includedUpdateClassifications": "Critical, Security, UpdateRollup, ServicePack, Definition",
            "excludedKbNumbers": [],
            "includedKbNumbers": [],
            "rebootSetting": "IfRequired"
          },
          "duration": "PT2H",
          "azureVirtualMachines": [],
          "nonAzureComputerNames": [],
          "targets": {
            "azureQueries": [
              {
                "scope": [
                  "[variables('softwareUpdateConfigurationsScope')]"
                ],
                "tagSettings": {
                  "tags": {
                    "securityPatchingWindows": "on"
                  },
                  "filterOperator": "All"

                }
              }
            ]
          }
        },
        "scheduleInfo": {
          "startTime": "2019-08-29T13:00:00+01:00",
          "expiryTime": "9999-12-31T23:59:00+00:00",
          "interval": 1,
          "frequency": "Day",
          "timeZone": "Europe/London"
        }
      }
    }
  ]
}